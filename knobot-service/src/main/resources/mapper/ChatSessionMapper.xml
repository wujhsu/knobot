<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.iohw.knobot.chat.mapper.ChatSessionMapper">

    <resultMap id="BaseResultMap" type="com.iohw.knobot.chat.entity.ChatSessionDO">
        <id column="id" property="id"/>
        <result column="memory_id" property="memoryId"/>
        <result column="user_id" property="userId"/>
        <result column="title" property="title"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, memory_id, user_id, title, status, create_time, update_time
    </sql>

    <insert id="insert" parameterType="com.iohw.knobot.chat.entity.ChatSessionDO">
        INSERT INTO chat_session (memory_id, user_id, title)
        VALUES (#{memoryId}, #{userId}, #{title})
    </insert>

    <select id="selectByMemoryId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM chat_session
        WHERE memory_id = #{memoryId}
    </select>

    <select id="selectByUserId" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        FROM chat_session
        WHERE user_id = #{userId}
        <if test="status != null">
            AND status = #{status}
        </if>
        ORDER BY update_time DESC
    </select>

    <update id="updateTitle">
        UPDATE chat_session
        SET title = #{title}
        WHERE memory_id = #{memoryId}
    </update>

    <update id="updateStatus">
        UPDATE chat_session
        SET status = #{status}
        WHERE memory_id = #{memoryId}
    </update>

    <delete id="deleteByMemoryId">
        DELETE FROM chat_session
        WHERE memory_id = #{memoryId}
    </delete>

    <select id="checkOwnership" resultType="java.lang.Boolean">
        SELECT COUNT(1) > 0
        FROM chat_session
        WHERE memory_id = #{memoryId}
        AND user_id = #{userId}
    </select>
</mapper>